extends ./layout/layout_main.pug

block css
  style.
    section.site .brief i {
      right: -34px;
      left: inherit;
      margin-right: 0;
    }
    section.site .brief.dd h4 span a,
    section.site .brief.c h4 span a,
    section.site .brief.di h4 span a {
      color: #5a5a5a;
    }
    section.site .brief.dd h4 span i,
    section.site .brief.dd h4 span a:hover,
    .navbar .minisite li a.dd i {
      color: #1A93D1;
    }
    section.site .brief.c h4 span i,
    section.site .brief.c h4 span a:hover,
    .navbar .minisite li a.tc i {
      color: #41B54B;
    }
    section.site .brief.di h4 span i,
    section.site .brief.di h4 span a:hover,
    .navbar .minisite li a.da i {
      color: #E93D3D;
    }
  //- style

block content

  .banner.home
